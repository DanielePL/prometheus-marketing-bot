{
  "name": "prometheus-marketing-engine",
  "version": "1.0.0",
  "description": "AI-powered performance marketing automation platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "db:seed": "cd server && node src/scripts/seed.js",
    "db:connect": "cd server && mongosh $MONGODB_URI",
    "db:backup": "cd server && npm run backup",
    "db:restore": "cd server && npm run restore",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "cd server && npm run deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Prometheus Team",
  "license": "MIT",
  "keywords": [
    "marketing",
    "ai",
    "automation",
    "performance-marketing",
    "prometheus",
    "mongodb",
    "mongoose",
    "express"
  ],
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "google-ads-api": "^19.0.4-rest-beta",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "socket.io": "^4.8.1",
    "validator": "^13.15.15"
  }
}
